@model QnA.Models.Answers

@{
    ViewBag.Title = "Delete";
}

<div id="navigation-top">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li>@Html.ActionLink("Question #" + Model.QuestionID, "Question", "Question", new { id = Model.QuestionID }, null)</li>
        <li class="active">Delete</li>
    </ol>
</div>

<h3>Delete an answer.</h3>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <h3>Are you sure you want to delete this?</h3>
        <input type="submit" value="Yes, delete it." class="btn btn-danger" />
        <a href="@Url.Action("Question", "Question", new { id = Model.QuestionID })" class="btn btn-primary">No, cancel it.</a>
    </div>
}

<div class="pull-left thing">
    <h6 class="info">
        Date: @Html.DisplayFor(model => model.Date) |
        User: @Html.DisplayFor(model => model.User.UserName) |
        Votes: @Html.DisplayFor(model => model.Votes)
    </h6>
    <div class="content">
        @Html.DisplayFor(model => model.Content)
    </div>
</div>
<div class="clearfix"></div>
