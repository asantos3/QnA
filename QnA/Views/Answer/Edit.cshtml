@model QnA.Models.Answers

@{
    ViewBag.Title = "Edit";
}

<div id="navigation-top">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li>@Html.ActionLink("Question #" + Model.QuestionID, "Question", "Question", new { id = Model.QuestionID }, null)</li>
        <li class="active">Edit</li>
    </ol>
</div>

<h3>Edit an answer.</h3>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label" })
        <p>@Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })</p>
        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


